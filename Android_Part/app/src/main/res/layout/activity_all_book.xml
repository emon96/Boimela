<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.emon.myapplication2.AllBook">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#000000"
        android:orientation="horizontal"
        android:weightSum="40"
        android:layout_height="55dp">
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchSpinnerId"
            android:layout_weight="-3"
            android:layout_marginTop="10dp">
        </Spinner>
        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/et_book_search"
            android:layout_weight="38"
            android:paddingLeft="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="1dp"

            android:backgroundTint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textColorHint="#ffffff"
            android:hint="Search "
            android:layout_height="match_parent" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_book"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@drawable/search_ic"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/mypostedjobsId"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
