<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.emon.myapplication2.NewsFeedDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="40dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/edittext_circle"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="7dp"

            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titlefullnewsfeedid"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#000000"
                android:hint="title"
                ></TextView>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imagefullnewsfeedid"
            ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="3000dp"
            android:id="@+id/detailsfullnewsfeedid"
            android:layout_marginTop="20dp"
            android:padding="7dp"
            android:hint="description"
            android:textSize="18dp"
            android:textColor="#000000"
            ></TextView>
    </LinearLayout>


</LinearLayout>
